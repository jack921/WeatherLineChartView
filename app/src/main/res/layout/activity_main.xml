<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jack.weatherlinerchartview.MainActivity">

   <com.jack.weatherlinerchartview.WeatherLineChart
       android:id="@+id/mylinechart"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:background="@color/lineChartColor"
       app:MaxLineColor="@color/colorPrimaryDark"
       app:MinLineColor="@color/colorAccent"
       app:CircleTextSize="15sp"
       app:CircleTextColor="@color/colorPrimary"
       app:CircleColor="#ffffff"
       app:ChartAlpha="255"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"/>

   <!--<com.jack.weatherlinerchartview.DrawText-->
       <!--android:layout_width="match_parent"-->
       <!--android:layout_height="120dp" />-->
   
</RelativeLayout>
